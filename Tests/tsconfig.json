{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "cucumber"
    ]
  },
  "include": [
    "Tests/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "Reports",
    "**/*.js"
  ],
  "ts-node": {
    "files": true,
    "experimentalSpecifierResolution": "node"
  }
}